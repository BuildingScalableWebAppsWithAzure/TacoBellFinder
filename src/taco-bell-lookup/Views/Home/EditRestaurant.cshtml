@using TacoBellFinder.Web.Models;
@model Restaurant

<div class="row">
    <div class="col-xs-12">
        <h1>Edit Restaurant</h1>
        @if (Model != null)
        {
            <p>
                To edit this restaurant record, enter changes in the fields below and click the Save button. You cannot edit the city, state,
                or restaurant number because these make up the partition and row keys.
            </p>
            @using (Html.BeginForm("UpdateRestaurant", "Home", FormMethod.Post))
            {
                @Html.Hidden("ETag")
                @Html.Hidden("PartitionKey")
                @Html.Hidden("RowKey")
                @Html.Hidden("City")
                @Html.Hidden("State");
                @Html.Hidden("RestaurantId")
                <div class="row">
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        <div class="form-group">
                            <label>Restaurant ID</label>
                            <input type="text" value="@Model.RestaurantId" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input type="text" name="Address" value="@Model.Address" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        <div class="form-group">
                            <label>City</label>
                            <input type="text" value="@Model.City" class="form-control" disabled />
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 col-md-3">
                        <div class="form-group">
                            <label>state</label>
                            <input type="text" value="@Model.State" class="form-control" disabled />
                        </div>
                    </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-3">
                            <div class="form-group">
                                <label for="Zipcode">Zip</label>
                                <input type="text" name="Zipcode" value="@Model.Zipcode" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-3">
                            <div class="form-group">
                                <label for="HealthRating">Health Rating</label>
                                <input type="text" name="HealthRating" value="@Model.HealthRating" class="form-control" />
                            </div>
                        </div>
                        </div>
                        <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-3">
                            <div class="form-group">
                                <label for="HealthRating">Health Rating</label>
                                @Html.CheckBox("HasGorditas")
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
            @using (Html.BeginForm("DeleteRestaurant", "Home", FormMethod.Post))
            {
                @Html.Hidden("ETag")
                @Html.Hidden("PartitionKey")
                @Html.Hidden("RowKey")
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <input type="submit" value="Delete" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p> We couldn't find the restaurant you are looking for. </p>
        }
    </div>
</div>

